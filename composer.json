{
  "name": "currency-amount-converter/currency-amount-converter",
  "description": "A simple package that converts EURO to other currency amount.",
  "keywords": [
    "currency-amount-converter",
    "laravel",
    "currency-amount-converter",
    "converter",
    "currency"
  ],
  "homepage": "https://github.com/isaacdarcilla/currency-amount-converter",
  "license": "MIT",
  "authors": [
    {
      "name": "Isaac D. Arcilla",
      "email": "isaacdarcilla@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.1",
    "spatie/laravel-package-tools": "^1.14.0",
    "illuminate/contracts": "^10.0",
    "ext-simplexml": "*"
  },
  "require-dev": {
    "laravel/pint": "^1.0",
    "nunomaduro/collision": "^7.9",
    "nunomaduro/larastan": "^2.0.1",
    "orchestra/testbench": "^8.0",
    "pestphp/pest": "^2.0",
    "pestphp/pest-plugin-arch": "^2.0",
    "pestphp/pest-plugin-laravel": "^2.0",
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan-deprecation-rules": "^1.0",
    "phpstan/phpstan-phpunit": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Currency\\CurrencyConverter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Currency\\CurrencyConverter\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
    "analyse": "vendor/bin/phpstan analyse",
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage",
    "format": "vendor/bin/pint"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "CurrencyConverterServiceProvider"
      ],
      "aliases": {
        "Converter": "Currency\\Converter\\Facades\\Converter"
      }
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}